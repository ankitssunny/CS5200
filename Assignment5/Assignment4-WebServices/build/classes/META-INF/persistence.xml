<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="Assignment4-Web Services">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>com.neu.edu.cs5200.assignment4.Entity.Site</class>
		<class>com.neu.edu.cs5200.assignment4.Entity.Tower</class>
		<class>com.neu.edu.cs5200.assignment4.Entity.Equipment</class>
		<properties>
			<property name="eclipselink.jdbc.password" value="password" />
			<property name="eclipselink.jdbc.user" value="root" />
			<property name="eclipselink.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/assignment4" />
			<!--  <property name="eclipselink.ddl-generation" value="drop-and-create-tables" />-->
			<property name="eclipselink.logging.level" value="ALL" />
		</properties>
	</persistence-unit>
</persistence>